<div class="container mx-auto bg-gray-700 px-4 pb-1 pt-4">
  <p id="notice"><%= notice %></p>

  <%= react_component("admin_order/order_view", { restaurantId: @restaurant.id }) %>
</div>
<style>
    tr:nth-child(even) {background-color: gray;}
</style>
<script>
    var coll = document.getElementsByClassName("collapsible");
    var i;

    var arrowClosed = '<img src="data:image/svg+xml;base64," />'

    var arrowOpen = '<img src="data:image/svg+xml;base64," />'

    for (i = 0; i < coll.length; i++) {
        // Set the start icon
        coll[i].innerHTML = arrowClosed;

        coll[i].addEventListener("click", function() {
            this.classList.toggle("active");
            var content = this.parentElement.parentElement.parentElement.parentElement.nextElementSibling
            if (content.style.display === "") {
                content.style.display = "none";
                this.innerHTML = arrowClosed;
            } else {
                content.style.display = "";
                this.innerHTML = arrowOpen;
            }
        });
    }
</script>
