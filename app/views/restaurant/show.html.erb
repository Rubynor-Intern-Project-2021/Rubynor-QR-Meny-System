<div class="flex lg:py-16 justify-center">
    <div class="flex flex-col w-full bg-white lg:rounded-2xl lg:w-1/3">
        <div class="px-2 py-8 sm:px-8">
            <div>
              <p class="mb-4 lg:mb-6 text-gray-900 font-semibold text-xl">Menyer</p>
            </div>
            <div class="">
              <% @menus.each_with_index do |menu| %>
              <div class="shadow my-3">
                  <%= link_to menu_path(menu) do %>
                    <% if menu.image.attached? %>
                      <%= image_tag menu.image,  class: "object-cover rounded-sm h-20 w-full border-none"%>
                    <% end %>
                    <div class="w-full p-5 relative rounded-sm z-0">
                      <div class="font-semibold pb-1">
                        <%= menu.name %>
                      </div>
                      <div class="text-gray-700 text-sm pb-1">
                        <%= menu.description %>
                      </div>
                    </div>
                  <% end %>
                  </div>
              <% end %>
            </div>
        </div>
    </div>
</div>