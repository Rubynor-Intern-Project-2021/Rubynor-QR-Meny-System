<p id="notice"><%= notice %></p>
<div class="py-32 pt-28 flex justify-center">
  <!-- Kort -->
  <div class="flex flex-col rounded-tl-3xl lg:rounded-2xl w-full bg-white lg:w-1/3">
    <div class=" p-8">
      <div>
        <p class="mb-2 lg:mb-5 text-gray-900 font-semibold text-2xl">Meny</p>
      </div>
      <div class="flex overflow-x-hidden">
        <!-- Menyer -->
        <% @restaurant.menus.each_with_index do |menu, index| %>
          <p class="pb-2 mr-4 text-gray-500 tracking-wide hover:text-gray-800 hover:shadow-md">
            <%= link_to menu.name, selected_menu_path(:menu_id => menu), :onclick => 'get_id(this.id)', :id => index, :remote => true %></p>
        <% end %>
      </div>

      <!-- Meny-innhold-->
      <div id="selected_menu">
        <% unless @selected %>
          <div>
            <%= render partial: 'menu/selected_menu', locals: { menu: @restaurant.menus.first } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
    document.getElementById(0).classList.add("active");
    function get_id(id) {
        for (let i = 0; i < <%= @restaurant.menus.size %>; i++) {
            document.getElementById(i).classList.remove("active");
        }
        document.getElementById(id).classList.add("active");
    }
</script>


