<div class="flex lg:py-16 justify-center">
    <!-- Kort -->
    <div class="flex flex-col w-full bg-white lg:rounded-2xl lg:w-2/5">
        <div class="px-2 py-8 sm:px-8">
            <div>
              <p class="mb-4 lg:mb-6 text-gray-900 font-semibold text-xl">Menyer</p>
            </div>
            <div class="">
             <!-- Menyer -->
              <% @menus.each_with_index do |menu, index| %>
                  <%= link_to menu_path(menu) do %>
                      <% if menu.image.attached? %>
                        <%= image_tag menu.image,  class: "shadow object-cover rounded-sm h-20 w-full border-none"%>
                      <% end %>
                    <div class="w-full my-3 px-5 pb-5 shadow relative rounded-sm z-0">
                      <div class="font-semibold pb-1">
                        <%= menu.name %>
                      </div>
                      <div class="text-gray-700 text-sm pb-1">
                        <%= menu.description %>
                      </div>
                    </div>
                  <% end %>
              <% end %>
            </div>
        </div>
    </div>
</div>