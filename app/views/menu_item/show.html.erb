<!--en rett-->
<p id="notice"><%= notice %></p>

<div class="py-32 bg-white pt-28 lg:flex lg:justify-center ">
  <div class="flex flex-col bg-white rounded-2xl lg:w-1/3">
    <div>
      <% if @menu_item.image.attached? %>
        <%= image_tag @menu_item.image, class:"shadow object-cover rounded-t-2xl w-full h-auto align-middle border-none"%>
      <% end %>
    </div>
    <div class="m-10">
      <div class="flex flex-row justify-between">
        <div class="font-semibold text-2xl">
          <%= @menu_item.name %>
        </div>

        <div class="font-semibold text-xl">
          <%= @menu_item.price.to_i %>,-
        </div>
      </div>

      <div class="text-gray-700 pt-10">
        <%= @menu_item.description %>
      </div>
      <!--<%= button_to 'Legg til(GAMMEL)', order_items_path(menu_item_id: @menu_item) %>-->

      <div class="text-gray-700 pt-10">
        Allergener:
        <br>
        <%= @menu_item.get_allergen_names_long.join(', ') %>
      </div>


      <%= button_to 'Legg til flere av gjenstand', add_to_cart_path(menu_item_id: @menu_item, amount: 4) %>

      <%= button_to 'Legg til en gjenstand(+)', add_one_to_cart_path(menu_item_id: @menu_item) %>
      <%= button_to 'Fjern en gjenstand(-)', remove_one_from_cart_path(menu_item_id: @menu_item), method: :delete %>
      <%= button_to 'Slett rad', remove_all_from_cart_path(menu_item_id: @menu_item), method: :delete %>

      <%= button_to 'TÃ¸m handlekurv', empty_cart_path(), method: :delete %>
      <%= total_amount() %>
    </div>
  </div>

</div>
