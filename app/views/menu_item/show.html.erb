<!--en rett-->
<div class="bg-white lg:bg-gray-100 flex lg:py-24  justify-center">

  <div class="flex flex-col bg-white rounded-2xl lg:w-1/3">
    <div>
      <% if @menu_item.image.attached? %>
        <%= image_tag @menu_item.image, class:"object-cover h-64 rounded-t-2xl w-full align-middle border-none"%>
      <% end %>
    </div>
    <div class="m-6">
      <div class="flex flex-row justify-between">
        <div class="font-semibold text-lg">
          <%= @menu_item.name %>
        </div>

        <div class="font-semibold text-lg">
          <%= @menu_item.price.to_i %>,-
        </div>
      </div>

      <div class="text-gray-700 pt-6">
        <%= @menu_item.description %>
      </div>

      <div class="text-gray-700 pt-6">
        Allergener:
        <br>
        <%= @menu_item.get_allergen_names_long.join(', ') %>
      </div>

      <%= react_component("add_to_cart", { menuItem: @menu_item }) %>
    </div>
  </div>

</div>
