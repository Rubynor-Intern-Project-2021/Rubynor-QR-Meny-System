<p id="notice"><%= notice %></p>

<div class="py-32 pt-28 flex justify-center">
  <!-- Kort -->
  <div class="flex flex-col rounded-tl-3xl lg:rounded-2xl w-full bg-white lg:w-1/3">
    <div class=" p-8">
      <div>
        <p class="mb-2 lg:mb-5 text-gray-900 font-semibold text-xl">Handlekurv</p>
      </div>

      <div>

        <% @order.order_items.each do |item| %>
          <%#= link_to menu_item_path(item.menu_item) do %>
            <!-- Hver rad-->
            <%= react_component("order_item", { menuItem: item.menu_item, quantity:item.quantity}) %>
          <% end %>
        <%# end %>

        <div>
          <%= button_to 'Slett', @order, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>

        <%= form_with model: @order, local: true, builder: TailwindBuilder do |form| %>
          <% if @order.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

              <ul>
                <% @order.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="mt-8">
            <%= form.label :"Kommentar til kjøkkenet"%>
          </div>

          <%= form.text_area :customer_info, placeholder: "F.eks. uten løk"%>

          <div class="mt-4">
            <%= form.label :"Bordnr"%>
          </div>

          <%= form.text_field :customer_info, placeholder: "F.eks. 1234", :maxlength=>"5" %>

          <div>
            Totalt <%= @order.total_price.to_i %>,-
          </div>

          <div class="actions mt-10">
            <%= form.submit 'Bestill' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
